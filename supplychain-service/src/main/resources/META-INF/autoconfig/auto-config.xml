<?xml version="1.0" encoding="UTF-8"?>

<config description="供应链AutoConf配置信息">
    <group name="sfht.supplychain.config.setting">

        <property name="com.sfebiz.supplychain.datasource.url" description="数据库地址" required="true"/>
        <property name="com.sfebiz.supplychain.datasource.username" description="数据库用户名" required="true"/>
        <property name="com.sfebiz.supplychain.datasource.password" description="数据库密码" required="true"/>

        <property name="com.sfebiz.supplychain.log.home" description="日志目录" required="true"/>
        <property name="com.sfebiz.supplychain.apiurl" description="API URL" required="true"/>
        <property name="com.sfebiz.supplychain.fileurl" description="文件URL" required="true"/>
        <property name="com.sfebiz.supplychain.printfile" description="打印文件" required="true"/>
        <property name="com.sfebiz.supplychain.tmpfile.home" description="临时文件目录" required="true"/>
        <property name="com.sfebiz.supplychain.printpath" description="文件打印地址" required="false"/>

        <property name="com.sfebiz.env" description="环境变量" required="true"/>
        <property name="ttf.path" description="TTP字体文件位置" required="false"/>

        <property name="dubbo.registry.url" description="Dubbo服务注册地址" required="true"/>
        <property name="dubbo.reference.version" description="Dubbo服务引用版本号" required="true"/>
        <property name="dubbo.export.version" description="Dubbo服务暴露版本号" required="true"/>
        <property name="dubbo.export.timeout" description="Dubbo服务暴露超时时间" required="true"/>
        <property name="dubbo.export.host" description="Dubbo服务暴露地址" required="false"/>

        <property name="com.sfebiz.supplychain.redisproxy.server.host" description="Redis-Proxy集群地址" required="true"/>
        <property name="com.sfebiz.supplychain.redisproxy.server.port" description="Redis-Proxy集群端口" required="true"/>
        <property name="com.sfebiz.supplychain.redisproxy.server.password" description="Redis-Proxy集群密码" required="false"/>
        <property name="com.sfebiz.supplychain.redisproxy.maxIdle" description="最大闲置连接数" required="true"/>
        <property name="com.sfebiz.supplychain.redisproxy.maxTotal" description="最大连接数，超过此连接时操作redis会报错" required="true"/>
        <property name="com.sfebiz.supplychain.redisproxy.maxWaitTime" description="redis获取连接的最大等待时间,单位为毫秒" required="true"/>
        <property name="com.sfebiz.supplychain.redisproxy.testOnBorrow" description="在borrow一个jedis实例时，是否提前进行validate操作；如果为true，则得到的jedis实例均是可用的" required="true"/>
        <property name="com.sfebiz.supplychain.redisproxy.minIdle" description="最小闲置连接数，spring启动的时候自动建立该数目的连接供应用程序使用，不够的时候会申请。默认值为0" required="true"/>
        <property name="com.sfebiz.supplychain.redisproxy.timeout" description="读取redis的最长超时时间,单位为毫秒" required="true"/>


        <property name="com.sfebiz.queue.accessKey" description="消息服务AK" required="true"/>
        <property name="com.sfebiz.queue.secretKey" description="消息服务SK" required="true"/>
        <property name="com.sfebiz.queue.supplychainEventRouteMessageProducerId" description="路由消息生产者ID" required="true"/>
        <property name="com.sfebiz.queue.supplychainEventRouteMessageConsumerId" description="路由消息消费者ID" required="true"/>

    </group>

    <script>
        <generate template="config.properties.vm" destfile="config.properties" charset="UTF-8"/>
    </script>
</config>