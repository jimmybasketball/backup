<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                            http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
                            http://www.springframework.org/schema/context
                            http://www.springframework.org/schema/context/spring-context-4.0.xsd"
       default-lazy-init="false">

	<context:property-placeholder
		file-encoding="UTF-8" ignore-resource-not-found="true"
		location="classpath:config.properties" />


	<bean id="dubboApplicationConfig" class="com.alibaba.dubbo.config.ApplicationConfig">
		<property name="name" value="supplychain" />
	</bean>

	<bean id="dubboRegistryConfig" class="com.alibaba.dubbo.config.RegistryConfig">
		<property name="address" value="${dubbo.registry.url}" />
	</bean>

	<bean id="dubboProtocolConfig" class="com.alibaba.dubbo.config.ProtocolConfig">
		<property name="port" value="-1" />
		<property name="host" value="${dubbo.export.host}" />
	</bean>

	<bean id="dubboMonitorConfig" class="com.alibaba.dubbo.config.MonitorConfig">
		<property name="address" value="zabbix://127.0.0.1"/>
	</bean>

	<!-- dubbo demo -->
	<bean id="DemoApiProvider" class="com.alibaba.dubbo.config.spring.ServiceBean">
		<property name="interface" value="com.sfebiz.supplychain.exposed.demo.api.DemoApi" />
		<property name="ref" ref="demoApi" />
		<property name="application" ref="dubboApplicationConfig" />
		<property name="registry" ref="dubboRegistryConfig" />
		<property name="protocol" ref="dubboProtocolConfig" />
		<property name="version" value="${dubbo.export.version}" />
		<property name="timeout" value="${dubbo.export.timeout}" />
	</bean>


	<!-- 仓库相关接口 start -->
	<bean id="warehouseManageServiceExport" class="com.alibaba.dubbo.config.spring.ServiceBean">
		<property name="interface" value="com.sfebiz.supplychain.exposed.warehouse.api.WarehouseManageService" />
		<property name="ref" ref="warehouseManageService" />
		<property name="application" ref="dubboApplicationConfig" />
		<property name="registry" ref="dubboRegistryConfig" />
		<property name="protocol" ref="dubboProtocolConfig" />
		<property name="version" value="${dubbo.export.version}" />
		<property name="timeout" value="${dubbo.export.timeout}" />
	</bean>
	<!-- 仓库相关接口 end -->
	
	<!-- 出库相关接口start -->
	<bean id="stockoutServiceExport" class="com.alibaba.dubbo.config.spring.ServiceBean">
		<property name="interface" value="com.sfebiz.supplychain.exposed.stockout.api.StockoutService" />
		<property name="ref" ref="stockoutService" />
		<property name="application" ref="dubboApplicationConfig" />
		<property name="registry" ref="dubboRegistryConfig" />
		<property name="protocol" ref="dubboProtocolConfig" />
		<property name="version" value="${dubbo.export.version}" />
		<property name="timeout" value="${dubbo.export.timeout}" />
	</bean>
	<!-- 出库相关接口end -->
	
	
	<!-- 商户(货主)账户 -->
	<bean id="MerchantProvider" class="com.alibaba.dubbo.config.spring.ServiceBean">
		<property name="interface" value="com.sfebiz.supplychain.exposed.merchant.api.MerchantService" />
		<property name="ref" ref="merchantService" />
		<property name="application" ref="dubboApplicationConfig" />
		<property name="registry" ref="dubboRegistryConfig" />
		<property name="protocol" ref="dubboProtocolConfig" />
		<property name="version" value="${dubbo.export.version}" />
		<property name="timeout" value="${dubbo.export.timeout}" />
	</bean>

	<!-- 物流线路 -->
	<bean id="logisticsLineProvider" class="com.alibaba.dubbo.config.spring.ServiceBean">
		<property name="interface" value="com.sfebiz.supplychain.exposed.line.api.LogisticsLineService" />
		<property name="ref" ref="logisticsLineService" />
		<property name="application" ref="dubboApplicationConfig" />
		<property name="registry" ref="dubboRegistryConfig" />
		<property name="protocol" ref="dubboProtocolConfig" />
		<property name="version" value="${dubbo.export.version}" />
		<property name="timeout" value="${dubbo.export.timeout}" />
	</bean>

	<!-- 商品start -->
	<bean id="skuProvider" class="com.alibaba.dubbo.config.spring.ServiceBean">
		<property name="interface" value="com.sfebiz.supplychain.exposed.sku.api.SkuService" />
		<property name="ref" ref="skuService" />
		<property name="application" ref="dubboApplicationConfig" />
		<property name="registry" ref="dubboRegistryConfig" />
		<property name="protocol" ref="dubboProtocolConfig" />
		<property name="version" value="${dubbo.export.version}" />
		<property name="timeout" value="${dubbo.export.timeout}" />
	</bean>
	<bean id="skuMerchantProvider" class="com.alibaba.dubbo.config.spring.ServiceBean">
		<property name="interface" value="com.sfebiz.supplychain.exposed.sku.api.SkuMerchantService" />
		<property name="ref" ref="skuMerchantService" />
		<property name="application" ref="dubboApplicationConfig" />
		<property name="registry" ref="dubboRegistryConfig" />
		<property name="protocol" ref="dubboProtocolConfig" />
		<property name="version" value="${dubbo.export.version}" />
		<property name="timeout" value="${dubbo.export.timeout}" />
	</bean>
	<!-- 商品end -->
	
	<!-- 开放平台相关接口 start -->
	<bean id="openWmsTradeServiceExport" class="com.alibaba.dubbo.config.spring.ServiceBean">
		<property name="interface" value="com.sfebiz.supplychain.open.exposed.wms.api.OpenWmsTradeService" />
		<property name="ref" ref="openWmsTradeService" />
		<property name="application" ref="dubboApplicationConfig" />
		<property name="registry" ref="dubboRegistryConfig" />
		<property name="protocol" ref="dubboProtocolConfig" />
		<property name="version" value="${dubbo.export.version}" />
		<property name="timeout" value="${dubbo.export.timeout}" />
	</bean>
	<!-- 开放平台相关接口 end -->

	<!-- 入库单start -->
	<bean id="stockInProvider" class="com.alibaba.dubbo.config.spring.ServiceBean">
		<property name="interface" value="com.sfebiz.supplychain.exposed.stockinorder.api.StockInService" />
		<property name="ref" ref="stockInService" />
		<property name="application" ref="dubboApplicationConfig" />
		<property name="registry" ref="dubboRegistryConfig" />
		<property name="protocol" ref="dubboProtocolConfig" />
		<property name="version" value="${dubbo.export.version}" />
		<property name="timeout" value="${dubbo.export.timeout}" />
	</bean>
	<!-- 入库单end -->
</beans>