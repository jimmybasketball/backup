<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                            http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
                            http://www.springframework.org/schema/context
                            http://www.springframework.org/schema/context/spring-context-4.0.xsd"
       default-lazy-init="false">
    <context:property-placeholder file-encoding="UTF-8" ignore-resource-not-found="true"
                                  location="classpath:config.properties"/>

    <bean id="env" class="java.lang.String">
        <constructor-arg value="${com.sfebiz.env}"/>
    </bean>
    <!-- 供应链 路由消息的生产与消费 -->
    <bean id="supplyChainRouteMessageProducer" class="com.sfebiz.supplychain.queue.MessageProducer">
        <property name="producerId" value="${com.sfebiz.queue.supplychainEventRouteMessageProducerId}_${com.sfebiz.env}"/>
        <property name="accessKey" value="${com.sfebiz.queue.accessKey}"/>
        <property name="secretKey" value="${com.sfebiz.queue.secretKey}"/>
    </bean>

    <bean id="supplyChainRouteMessageConsumer" class="com.sfebiz.supplychain.msg.SupplychainEventRouteMessageConsumer">
        <property name="consumerId" value="${com.sfebiz.queue.supplychainEventRouteMessageConsumerId}_${com.sfebiz.env}"/>
        <property name="accessKey" value="${com.sfebiz.queue.accessKey}"/>
        <property name="secretKey" value="${com.sfebiz.queue.secretKey}"/>
    </bean>
</beans>
